<?xml version="1.0" encoding="utf-8"?>
<plugin id="github">
  <mirror-site id="github">
    <name>Github</name>
    <storage type="git"></storage>
    <advertiser>
      <interface>git:http</interface>
    </advertiser>
    <initializer>
      <executable>updater.py</executable>
    </initializer>
    <updater>
      <executable>updater.py</executable>
      <cron-expression>0 0 * * 0</cron-expression>
    </updater>
  </mirror-site>
</plugin>
